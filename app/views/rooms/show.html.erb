<div class="col-sm-8">
  <div class="card">
    <div class="card-block">
      <h1>Chat room</h1>
      <div id="messages">
        <%= render @messages %>
      </div>
      <form>
        <fieldset class="form-group">
          <textarea id="message-input" class="form-control" rows="3" type="text" data-behavior="room_speaker"></textarea>
        </fieldset>
      </form>
    </div>
  </div>
</div>
<div class="col-sm-4">
  <div class="card">
    <div class="card-header">
      <h4>Users in this room</h4>
    </div>
    <div class="card-block">
      <div id="users">
        <ul class="user-list">
          <li>
            Lewis
          </li>
          <li>
            Piet
          </li>
          <li>
            Bob
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
